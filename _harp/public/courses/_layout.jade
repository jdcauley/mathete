!!!
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title}
    link(rel="stylesheet", href="/assets/css/app.css")
     
  body(class="page-#{ current.path[0] } #{ current.path.join('-') }")
    header
      .container
        h3 #{site_title}
        h1 #{ title }
        time #{ date }
    .section
      .container
        .row
          .col-sm-8.main
            article
              !=yield
              
               
          .col-sm-4.aside
            h2.brand
              a(href="/") #{instructor_1} 
            #gravatar.gravatar
                     
    footer
      .container
        .row
          .col-sm-12
            p.copyright.pull-right &copy; #{site_title} 2013 
              a(href="http://twitter.com/#{twitter}") #{twitter}
    
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js")
    script(src="/assets/js/app.js")
    script
      $('#gravatar').append($.gravatar('#{instructor_1_email}', {size: 800, classes: 'img-responsive'}));
  
 